<g-header></g-header><g-book-title data="{{meta}}"></g-book-title><view class="main">  <view class="top">    <view class="title">{{topic.title}}</view>    <view class="info">      <view class="head">        <image mode="aspectFit" src="{{topic.author.avatar}}"></image>      </view>      <text class="name">{{topic.author.name}}</text>      <text class="create-time">{{topic.create_time}}</text>    </view>    <view class="content" >      <rich-text nodes="{{topic.content}}"></rich-text>    </view>  </view>  <view class="tip">    <view class="left">回应({{total}})</view>    <view class="see-lz" bindtap="onlySeeLz" wx:if="{{!isSeeLz}}">只看楼主</view>    <view class="see-lz active" bindtap="cancelOnlySeeLz" wx:if="{{isSeeLz}}">只看楼主</view>  </view>  <view class="comments">    <view class="comment" wx:for="{{comments}}" wx:key="id">      <view class="img user-header">        <image mode="aspectFill" src="{{item.author.avatar}}"></image>      </view>      <view class="right">        <view class="right-top">          <text class="username">{{item.author.name}}</text><text class="create-time">{{item.create_time}}</text>        </view>        <rich-text class="content">{{item.text}}</rich-text>        <view class="bottom">          <view class="good">            <image class="good-icon"                   src="https://img3.doubanio.com/f/talion/7a0756b3b6e67b59ea88653bc0cfa14f61ff219d/pics/card/ic_like_gray.svg"></image>            <text class="count">{{item.vote_count}}</text>          </view>          <view class="more">            <image class="more-icon"                   src="https://img3.doubanio.com/f/talion/be268c0a1adb577c8dfdcfbe48c818af3983ed62/pics/card/more.svg"></image>          </view>        </view>      </view>    </view>  </view></view><g-footer></g-footer>