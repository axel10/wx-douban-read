<g-header></g-header><view class="main">  <view class="top">    <view class="input">      <input type="text" value="{{query}}" bindconfirm="search" bindinput="handleInput"/>    </view>    <view class="submit" bindtap="hideMenu" bindtap="search">      搜索    </view>  </view>  <view class="content">    <view class="title">      读书    </view>    <view class="book-item" wx:for="{{books}}" wx:key="id" data-id="{{item.id}}" bindtap="toDetail">      <view class="cover">        <image mode="aspectFit" src="{{item.images.small}}"></image>      </view>      <view class="right">        <view class="title">{{item.title}}</view>        <view class="rating">          <g-rating-stars max="{{item.rating.max}}" value="{{item.rating.average}}"></g-rating-stars>          <view class="value">{{item.rating.average}}</view>        </view>      </view>    </view>    <view class="load-more {{loading||isEnd?'hide':''}}" bindtap="loadMore" >      更多读书结果    </view>    <view class="end" wx:if="{{isEnd}}">      到底了    </view>  </view></view>